<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleActivity"

    >

    <org.jp.waveview.WaveView
        android:id="@+id/normal_wave"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        app:defaultWaveLineHeight="200dp"
        app:isRiseUp="false"
        app:isShowPercentText="false"
        app:waveColor="#33ff0000"
        app:waveCrest="80dp"
        app:speedX ="8"
        />

    <org.jp.waveview.WaveView
        android:id="@+id/rise_up_wave"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        app:defaultWaveLineHeight="100dp"
        app:isRiseUp="true"
        app:isShowPercentText="false"
        app:waveColor="@android:color/holo_blue_dark"
        app:waveCrest="80dp"
        app:speedX ="8"
        app:speedY ="0.4"
        />

</FrameLayout>
